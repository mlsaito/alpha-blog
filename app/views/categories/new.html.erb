<h1 id="page-header">Create New Category</h1>

<%= render 'shared/errors', obj: @category %>
<div class='row'>
  <div class='col-xs-6 col-xs-offset-3'>
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
          </div>
        </div>
      <div class="form-group">
        <div class="center">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>

    <div class="center">
      <%= link_to "[ Browse Articles ]", articles_path %>
    </div>
  </div>
</div>
